{
  "name": "blog-astro",
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "build": "run-s check \"build-ci {@}\" --",
    "build-ci": "run-s dep:playwright \"build-only {@}\" --",
    "build-only": "astro build",
    "check": "astro check",
    "dep:playwright": "playwright install chromium",
    "dev": "astro dev",
    "lint": "run-s \"lint:biome {@}\" lint:md --",
    "lint:biome": "biome check",
    "lint:md": "remark . --quiet --frail",
    "preview": "astro preview"
  },
  "remarkConfig": {
    "plugins": [
      "remark-mdx",
      "remark-frontmatter",
      "remark-preset-lint-consistent",
      "remark-preset-lint-recommended",
      "remark-preset-lint-markdown-style-guide",
      [
        "remark-lint-maximum-line-length",
        false
      ],
      [
        "remark-lint-ordered-list-marker-value",
        "ordered"
      ]
    ]
  },
  "dependencies": {
    "@astrojs/mdx": "^4.2.5",
    "@critters-rs/astro": "^1.1.2",
    "@fontsource-variable/fira-code": "^5.2.5",
    "@fontsource-variable/inter": "^5.2.5",
    "@fontsource-variable/noto-sans-sc": "^5.2.5",
    "@fontsource/fira-code": "^5.2.6",
    "@fontsource/inter": "^5.2.5",
    "@fontsource/noto-sans-sc": "^5.2.5",
    "astro": "^5.7.7",
    "astro-expressive-code": "^0.41.2",
    "astro-min": "1.3.1",
    "astro-purgecss": "^5.2.2",
    "date-fns": "4.1.0",
    "katex": "^0.16.22",
    "lxgw-wenkai-screen-webfont": "^1.7.0",
    "mermaid": "^11.6.0",
    "rehype-autolink-headings": "^7.1.0",
    "rehype-katex": "^7.0.1",
    "rehype-mermaid": "^3.0.0",
    "rehype-slug": "^6.0.0",
    "remark-gfm": "^4.0.1",
    "remark-math": "^6.0.0",
    "remark-smartypants": "^3.0.2",
    "typescript": "^5.8.3"
  },
  "devDependencies": {
    "@astrojs/check": "0.9.4",
    "@astrojs/markdown-remark": "^6.3.1",
    "@biomejs/biome": "^1.9.4",
    "autoprefixer": "^10.4.21",
    "browserslist": "^4.24.4",
    "cssnano": "^7.0.6",
    "image-size": "^2.0.2",
    "npm-run-all2": "^7.0.2",
    "playwright": "^1.52.0",
    "postcss": "^8.5.3",
    "postcss-html": "^1.8.0",
    "postcss-preset-env": "^10.1.6",
    "remark-frontmatter": "^5.0.0",
    "remark-lint-maximum-line-length": "^4.1.1",
    "remark-lint-ordered-list-marker-value": "^4.0.1",
    "remark-mdx": "^3.1.0",
    "remark-preset-lint-consistent": "^6.0.1",
    "remark-preset-lint-markdown-style-guide": "^6.0.1",
    "remark-preset-lint-recommended": "^7.0.1",
    "sharp": "^0.34.1",
    "stylelint": "^16.19.1",
    "stylelint-config-html": "^1.1.0",
    "stylelint-config-recommended": "^16.0.0",
    "stylelint-config-standard": "^38.0.0",
    "vite": "^6.3.4"
  },
  "packageManager": "pnpm@10.9.0+sha512.0486e394640d3c1fb3c9d43d49cf92879ff74f8516959c235308f5a8f62e2e19528a65cdc2a3058f587cde71eba3d5b56327c8c33a97e4c4051ca48a10ca2d5f",
  "pnpm": {
    "onlyBuiltDependencies": [
      "@biomejs/biome",
      "esbuild",
      "sharp"
    ]
  }
}
