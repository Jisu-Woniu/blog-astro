    "@fontsource-variable/noto-sans-sc": "^5.2.5",
    "@fontsource/fira-code": "^5.2.5",
    "@fontsource/inter": "^5.2.5",
    "@fontsource/noto-sans-sc": "^5.2.5",
    "astro": "^5.4.3",
    "astro-expressive-code": "^0.40.2",
    "astro-min": "1.3.1",
    "astro-purgecss": "^5.2.2",
    "date-fns": "4.1.0",
    "katex": "^0.16.21",
    "lxgw-wenkai-screen-webfont": "^1.7.0",
    "mermaid": "^11.4.1",
    "rehype-autolink-headings": "^7.1.0",
    "rehype-katex": "^7.0.1",
    "rehype-mermaid": "^3.0.0",
    "rehype-slug": "^6.0.0",
    "remark-gfm": "^4.0.1",
    "remark-math": "^6.0.0",
    "remark-mermaidjs": "^7.0.0",
    "remark-smartypants": "^3.0.2",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.26.1"
  },
  "devDependencies": {
    "@astrojs/check": "0.9.4",
    "@astrojs/markdown-remark": "^6.2.1",
    "@eslint/js": "^9.22.0",
    "astro-eslint-parser": "^1.2.1",
    "autoprefixer": "^10.4.21",
    "browserslist": "^4.24.4",
    "cssnano": "^7.0.6",
    "eslint": "^9.22.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-mdx": "^3.2.0",
    "eslint-plugin-astro": "^1.3.1",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "image-size": "^2.0.0",
    "npm-run-all2": "^7.0.2",
    "playwright": "^1.51.0",
    "postcss": "^8.5.3",
    "postcss-html": "^1.8.0",
    "postcss-preset-env": "^10.1.5",
    "prettier": "^3.5.3",
    "prettier-plugin-astro": "^0.14.1",
    "remark-frontmatter": "^5.0.0",
    "remark-lint-maximum-line-length": "^4.1.1",
    "remark-lint-ordered-list-marker-value": "^4.0.1",
    "remark-mdx": "^3.1.0",
    "remark-preset-lint-consistent": "^6.0.1",
    "remark-preset-lint-markdown-style-guide": "^6.0.1",
    "remark-preset-lint-recommended": "^7.0.1",
    "remark-preset-prettier": "^2.0.1",
