{
  "name": "blog-astro",
  "type": "module",
  "version": "0.0.1",
  "packageManager": "pnpm@8.15.1",
  "scripts": {
    "build": "run-s check build-ci",
    "build-ci": "run-s dep:playwright build-only",
    "build-only": "astro build",
    "check": "run-s check:astro check:ts",
    "check:astro": "astro check",
    "check:ts": "tsc --noEmit",
    "dep:playwright": "playwright install chromium",
    "dev": "astro dev",
    "lint": "run-s lint:css lint:js lint:md",
    "lint:css": "stylelint \"src/**/*.{css,scss,astro}\"",
    "lint:js": "eslint src",
    "lint:md": "remark . --quiet --frail",
    "preview": "astro preview"
  },
  "dependencies": {
    "@astrojs/mdx": "^2.1.1",
    "@fontsource-variable/fira-code": "^5.0.16",
    "@fontsource-variable/inter": "^5.0.16",
    "@fontsource-variable/noto-sans-sc": "^5.0.4",
    "@fontsource/fira-code": "^5.0.16",
    "@fontsource/inter": "^5.0.16",
    "@fontsource/noto-sans-sc": "^5.0.17",
    "astro": "^4.4.0",
    "astro-critters": "^2.1.1",
    "astro-expressive-code": "^0.32.4",
    "astro-min": "1.2.4",
    "astro-purgecss": "^4.1.0",
    "date-fns": "^3.3.1",
    "katex": "^0.16.9",
    "lxgw-wenkai-screen-webfont": "^1.7.0",
    "mermaid": "^10.8.0",
    "rehype-autolink-headings": "^7.1.0",
    "rehype-katex": "^7.0.0",
    "rehype-mermaid": "^2.1.0",
    "rehype-slug": "^6.0.0",
    "remark-gfm": "^4.0.0",
    "remark-math": "^6.0.0",
    "remark-mermaidjs": "^6.0.0",
    "remark-smartypants": "^2.1.0",
    "typescript": "^5.3.3"
  },
  "devDependencies": {
    "@astrojs/check": "^0.5.4",
    "@astrojs/markdown-remark": "^4.2.1",
    "@typescript-eslint/eslint-plugin": "^7.0.1",
    "@typescript-eslint/parser": "^7.0.1",
    "astro-eslint-parser": "^0.16.3",
    "autoprefixer": "^10.4.17",
    "browserslist": "^4.23.0",
    "cssnano": "^6.0.3",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-astro": "^0.31.4",
    "eslint-plugin-mdx": "^3.1.5",
    "image-size": "^1.1.1",
    "npm-run-all2": "^6.1.2",
    "playwright": "^1.41.2",
    "postcss": "^8.4.35",
    "postcss-html": "^1.6.0",
    "postcss-preset-env": "^9.3.0",
    "prettier": "^3.2.5",
    "prettier-plugin-astro": "^0.13.0",
    "remark-mdx": "^3.0.1",
    "remark-preset-lint-markdown-style-guide": "^5.1.3",
    "remark-preset-lint-recommended": "^6.1.3",
    "sharp": "^0.33.2",
    "stylelint": "^16.2.1",
    "stylelint-config-html": "^1.1.0",
    "stylelint-config-recommended": "^14.0.0",
    "stylelint-config-standard": "^36.0.0",
    "vite": "^5.1.3",
    "vite-plugin-purgecss": "^0.2.12"
  },
  "remarkConfig": {
    "plugins": [
      "remark-mdx",
      "remark-preset-lint-markdown-style-guide",
      [
        "remark-lint-maximum-line-length",
        false
      ]
    ]
  }
}
