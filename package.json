{
  "name": "blog-astro",
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "build": "run-s check \"build-ci {@}\" --",
    "build-ci": "run-s dep:playwright \"build-only {@}\" --",
    "build-only": "astro build",
    "check": "astro check",
    "dep:playwright": "playwright install chromium",
    "dev": "astro dev",
    "lint": "run-s \"lint:biome {@}\" lint:md --",
    "lint:biome": "biome check",
    "lint:md": "remark . --quiet --frail",
    "preview": "astro preview"
  },
  "remarkConfig": {
    "plugins": [
      "remark-mdx",
      "remark-frontmatter",
      "remark-preset-lint-consistent",
      "remark-preset-lint-recommended",
      "remark-preset-lint-markdown-style-guide",
      ["remark-lint-maximum-line-length", false],
      ["remark-lint-ordered-list-marker-value", "ordered"]
    ]
  },
  "dependencies": {
    "@astrojs/mdx": "^4.2.3",
    "@critters-rs/astro": "^1.1.2",
    "@fontsource-variable/fira-code": "^5.2.5",
    "@fontsource-variable/inter": "^5.2.5",
    "@fontsource-variable/noto-sans-sc": "^5.2.5",
    "@fontsource/fira-code": "^5.2.5",
    "@fontsource/inter": "^5.2.5",
    "@fontsource/noto-sans-sc": "^5.2.5",
    "astro": "^5.5.6",
    "astro-expressive-code": "^0.40.2",
    "astro-min": "1.3.1",
    "astro-purgecss": "^5.2.2",
    "date-fns": "4.1.0",
    "katex": "^0.16.21",
    "lxgw-wenkai-screen-webfont": "^1.7.0",
    "mermaid": "^11.6.0",
    "rehype-autolink-headings": "^7.1.0",
    "rehype-katex": "^7.0.1",
    "rehype-mermaid": "^3.0.0",
    "rehype-slug": "^6.0.0",
    "remark-gfm": "^4.0.1",
    "remark-math": "^6.0.0",
    "remark-mermaidjs": "^7.0.0",
    "remark-smartypants": "^3.0.2",
    "typescript": "^5.8.2"
  },
  "devDependencies": {
    "@astrojs/check": "0.9.4",
    "@astrojs/markdown-remark": "^6.3.1",
    "@biomejs/biome": "^1.9.4",
    "autoprefixer": "^10.4.21",
    "browserslist": "^4.24.4",
    "cssnano": "^7.0.6",
    "image-size": "^2.0.2",
    "npm-run-all2": "^7.0.2",
    "playwright": "^1.51.1",
    "postcss": "^8.5.3",
    "postcss-html": "^1.8.0",
    "postcss-preset-env": "^10.1.5",
    "remark-frontmatter": "^5.0.0",
    "remark-lint-maximum-line-length": "^4.1.1",
    "remark-lint-ordered-list-marker-value": "^4.0.1",
    "remark-mdx": "^3.1.0",
    "remark-preset-lint-consistent": "^6.0.1",
    "remark-preset-lint-markdown-style-guide": "^6.0.1",
    "remark-preset-lint-recommended": "^7.0.1",
    "sharp": "^0.33.5",
    "stylelint": "^16.17.0",
    "stylelint-config-html": "^1.1.0",
    "stylelint-config-recommended": "^15.0.0",
    "stylelint-config-standard": "^37.0.0",
    "vite": "^6.2.4"
  },
  "packageManager": "pnpm@10.6.2+sha512.47870716bea1572b53df34ad8647b42962bc790ce2bf4562ba0f643237d7302a3d6a8ecef9e4bdfc01d23af1969aa90485d4cebb0b9638fa5ef1daef656f6c1b",
  "pnpm": {
    "onlyBuiltDependencies": ["@biomejs/biome", "esbuild"]
  }
}
