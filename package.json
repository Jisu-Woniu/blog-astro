{
  "name": "blog-astro",
  "type": "module",
  "version": "0.0.1",
  "packageManager": "pnpm@9.5.0+sha512.140036830124618d624a2187b50d04289d5a087f326c9edfc0ccd733d76c4f52c3a313d4fc148794a2a9d81553016004e6742e8cf850670268a7387fc220c903",
  "scripts": {
    "build": "run-s check \"build-ci {@}\" --",
    "build-ci": "run-s dep:playwright \"build-only {@}\" --",
    "build-only": "astro build",
    "check": "run-s check:astro check:ts",
    "check:astro": "astro check",
    "check:ts": "tsc --noEmit",
    "dep:playwright": "playwright install chromium",
    "dev": "astro dev",
    "lint": "run-s \"lint:css {@}\" \"lint:js {@}\" lint:md --",
    "lint:css": "stylelint \"src/**/*.{css,scss,astro}\"",
    "lint:js": "eslint \"src/**/*.{md,mdx,js,ts,cjs}\"",
    "lint:md": "remark . --quiet --frail",
    "preview": "astro preview"
  },
  "dependencies": {
    "@astrojs/mdx": "^4.0.2",
    "@fontsource-variable/fira-code": "^5.1.0",
    "@fontsource-variable/inter": "^5.1.0",
    "@fontsource-variable/noto-sans-sc": "^5.1.0",
    "@fontsource/fira-code": "^5.1.0",
    "@fontsource/inter": "^5.1.0",
    "@fontsource/noto-sans-sc": "^5.1.0",
    "astro": "^5.0.9",
    "astro-critters": "^2.2.0",
    "astro-expressive-code": "^0.38.3",
    "astro-min": "1.3.1",
    "astro-purgecss": "^5.0.0",
    "date-fns": "^3.6.0",
    "katex": "^0.16.17",
    "lxgw-wenkai-screen-webfont": "^1.7.0",
    "mermaid": "^10.9.3",
    "rehype-autolink-headings": "^7.1.0",
    "rehype-katex": "^7.0.1",
    "rehype-mermaid": "^2.1.0",
    "rehype-slug": "^6.0.0",
    "remark-gfm": "^4.0.0",
    "remark-math": "^6.0.0",
    "remark-mermaidjs": "^6.0.0",
    "remark-smartypants": "^3.0.2",
    "typescript": "^5.7.2"
  },
  "devDependencies": {
    "@astrojs/check": "0.9.4",
    "@astrojs/markdown-remark": "^6.0.1",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "astro-eslint-parser": "^1.1.0",
    "autoprefixer": "^10.4.20",
    "browserslist": "^4.24.3",
    "cssnano": "^7.0.6",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-mdx": "^3.1.5",
    "eslint-plugin-astro": "^1.3.1",
    "eslint-plugin-mdx": "^3.1.5",
    "image-size": "^1.1.1",
    "npm-run-all2": "^6.2.6",
    "playwright": "^1.49.1",
    "postcss": "^8.4.49",
    "postcss-html": "^1.7.0",
    "postcss-preset-env": "^9.6.0",
    "prettier": "^3.4.2",
    "prettier-plugin-astro": "^0.14.1",
    "remark-frontmatter": "^5.0.0",
    "remark-lint-maximum-line-length": "^4.0.1",
    "remark-lint-ordered-list-marker-value": "^4.0.0",
    "remark-mdx": "^3.1.0",
    "remark-preset-lint-consistent": "^6.0.0",
    "remark-preset-lint-markdown-style-guide": "^6.0.0",
    "remark-preset-lint-recommended": "^7.0.0",
    "remark-preset-prettier": "^2.0.1",
    "sharp": "^0.33.5",
    "stylelint": "^16.12.0",
    "stylelint-config-html": "^1.1.0",
    "stylelint-config-recommended": "^14.0.1",
    "stylelint-config-standard": "^36.0.1",
    "vite": "^5.4.11"
  },
  "remarkConfig": {
    "plugins": [
      "remark-mdx",
      "remark-frontmatter",
      "remark-preset-lint-consistent",
      "remark-preset-lint-recommended",
      "remark-preset-lint-markdown-style-guide",
      [
        "remark-lint-maximum-line-length",
        false
      ],
      [
        "remark-lint-ordered-list-marker-value",
        "ordered"
      ],
      "remark-preset-prettier"
    ]
  }
}
