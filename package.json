{
  "name": "blog-astro",
  "type": "module",
  "version": "0.0.1",
  "packageManager": "pnpm@8.15.5",
  "scripts": {
    "build": "run-s check build-ci",
    "build-ci": "run-s dep:playwright build-only",
    "build-only": "astro build",
    "check": "run-s check:astro check:ts",
    "check:astro": "astro check",
    "check:ts": "tsc --noEmit",
    "dep:playwright": "playwright install chromium",
    "dev": "astro dev",
    "lint": "run-s lint:css lint:js lint:md",
    "lint:css": "stylelint \"src/**/*.{css,scss,astro}\"",
    "lint:js": "eslint \"src/**/*.{md,mdx,js,ts,cjs}\"",
    "lint:md": "remark . --quiet --frail",
    "preview": "astro preview"
  },
  "dependencies": {
    "@astrojs/mdx": "^2.2.1",
    "@fontsource-variable/fira-code": "^5.0.17",
    "@fontsource-variable/inter": "^5.0.17",
    "@fontsource-variable/noto-sans-sc": "^5.0.5",
    "@fontsource/fira-code": "^5.0.17",
    "@fontsource/inter": "^5.0.17",
    "@fontsource/noto-sans-sc": "^5.0.18",
    "astro": "^4.5.9",
    "astro-critters": "^2.1.6",
    "astro-expressive-code": "^0.33.5",
    "astro-min": "1.2.6",
    "astro-purgecss": "^4.1.0",
    "date-fns": "^3.6.0",
    "katex": "^0.16.9",
    "lxgw-wenkai-screen-webfont": "^1.7.0",
    "mermaid": "^10.9.0",
    "rehype-autolink-headings": "^7.1.0",
    "rehype-katex": "^7.0.0",
    "rehype-mermaid": "^2.1.0",
    "rehype-slug": "^6.0.0",
    "remark-gfm": "^4.0.0",
    "remark-math": "^6.0.0",
    "remark-mermaidjs": "^6.0.0",
    "remark-smartypants": "^2.1.0",
    "typescript": "^5.4.3"
  },
  "devDependencies": {
    "@astrojs/check": "^0.5.10",
    "@astrojs/markdown-remark": "^4.3.1",
    "@typescript-eslint/eslint-plugin": "^7.3.1",
    "@typescript-eslint/parser": "^7.3.1",
    "astro-eslint-parser": "^0.16.3",
    "autoprefixer": "^10.4.19",
    "browserslist": "^4.23.0",
    "cssnano": "^6.1.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-mdx": "^3.1.5",
    "eslint-plugin-astro": "^0.32.0",
    "eslint-plugin-mdx": "^3.1.5",
    "image-size": "^1.1.1",
    "npm-run-all2": "^6.1.2",
    "playwright": "^1.42.1",
    "postcss": "^8.4.38",
    "postcss-html": "^1.6.0",
    "postcss-preset-env": "^9.5.2",
    "prettier": "^3.2.5",
    "prettier-plugin-astro": "^0.13.0",
    "remark-frontmatter": "^5.0.0",
    "remark-lint-maximum-line-length": "^3.1.3",
    "remark-lint-ordered-list-marker-value": "^3.1.2",
    "remark-mdx": "^3.0.1",
    "remark-preset-lint-consistent": "^5.1.2",
    "remark-preset-lint-markdown-style-guide": "^5.1.3",
    "remark-preset-lint-recommended": "^6.1.3",
    "remark-preset-prettier": "^2.0.1",
    "sharp": "^0.33.3",
    "stylelint": "^16.2.1",
    "stylelint-config-html": "^1.1.0",
    "stylelint-config-recommended": "^14.0.0",
    "stylelint-config-standard": "^36.0.0",
    "vite": "^5.2.4",
    "vite-plugin-purgecss": "^0.2.12"
  },
  "remarkConfig": {
    "plugins": [
      "remark-mdx",
      "remark-frontmatter",
      "remark-preset-lint-consistent",
      "remark-preset-lint-recommended",
      "remark-preset-lint-markdown-style-guide",
      [
        "remark-lint-maximum-line-length",
        false
      ],
      [
        "remark-lint-ordered-list-marker-value",
        "ordered"
      ],
      "remark-preset-prettier"
    ]
  }
}
