{
  "name": "blog-astro",
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "build": "run-s check \"build-ci {@}\" --",
    "build-ci": "run-s dep:playwright \"build-only {@}\" --",
    "build-only": "astro build",
    "check": "astro check",
    "dep:playwright": "playwright install chromium",
    "dev": "astro dev",
    "lint": "run-s \"lint:biome {@}\" lint:md --",
    "lint:biome": "biome check",
    "lint:md": "remark . --quiet --frail",
    "preview": "astro preview"
  },
  "remarkConfig": {
    "plugins": [
      "remark-mdx",
      "remark-frontmatter",
      "remark-preset-lint-consistent",
      "remark-preset-lint-recommended",
      "remark-preset-lint-markdown-style-guide",
      [
        "remark-lint-maximum-line-length",
        false
      ],
      [
        "remark-lint-ordered-list-marker-value",
        "ordered"
      ]
    ]
  },
  "dependencies": {
    "@astrojs/mdx": "^4.3.4",
    "@critters-rs/astro": "^1.1.3",
    "@fontsource-variable/fira-code": "^5.2.6",
    "@fontsource-variable/inter": "^5.2.6",
    "@fontsource-variable/noto-sans-sc": "^5.2.6",
    "@fontsource/fira-code": "^5.2.6",
    "@fontsource/inter": "^5.2.6",
    "@fontsource/noto-sans-sc": "^5.2.6",
    "astro": "^5.13.3",
    "astro-expressive-code": "^0.41.3",
    "astro-min": "1.3.1",
    "astro-purgecss": "^5.3.0",
    "date-fns": "4.1.0",
    "katex": "^0.16.22",
    "lxgw-wenkai-screen-webfont": "^1.7.0",
    "mermaid": "^11.10.1",
    "rehype-autolink-headings": "^7.1.0",
    "rehype-katex": "^7.0.1",
    "rehype-mermaid": "^3.0.0",
    "rehype-slug": "^6.0.0",
    "remark-gfm": "^4.0.1",
    "remark-math": "^6.0.0",
    "remark-smartypants": "^3.0.2",
    "typescript": "^5.9.2"
  },
  "devDependencies": {
    "@astrojs/check": "0.9.4",
    "@astrojs/markdown-remark": "^6.3.6",
    "@biomejs/biome": "^2.2.2",
    "autoprefixer": "^10.4.21",
    "browserslist": "^4.25.3",
    "cssnano": "^7.1.1",
    "image-size": "^2.0.2",
    "npm-run-all2": "^8.0.4",
    "playwright": "^1.55.0",
    "postcss": "^8.5.6",
    "postcss-html": "^1.8.0",
    "postcss-preset-env": "^10.3.0",
    "remark-frontmatter": "^5.0.0",
    "remark-lint-maximum-line-length": "^4.1.1",
    "remark-lint-ordered-list-marker-value": "^4.0.1",
    "remark-mdx": "^3.1.0",
    "remark-preset-lint-consistent": "^6.0.1",
    "remark-preset-lint-markdown-style-guide": "^6.0.1",
    "remark-preset-lint-recommended": "^7.0.1",
    "sharp": "^0.34.3",
    "stylelint": "^16.23.1",
    "stylelint-config-html": "^1.1.0",
    "stylelint-config-recommended": "^17.0.0",
    "stylelint-config-standard": "^39.0.0",
    "vite": "^7.1.3"
  },
  "packageManager": "pnpm@10.13.1+sha512.37ebf1a5c7a30d5fabe0c5df44ee8da4c965ca0c5af3dbab28c3a1681b70a256218d05c81c9c0dcf767ef6b8551eb5b960042b9ed4300c59242336377e01cfad",
  "pnpm": {
    "onlyBuiltDependencies": [
      "@biomejs/biome",
      "esbuild",
      "sharp"
    ]
  }
}
