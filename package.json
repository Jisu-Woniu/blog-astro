{
  "name": "blog-astro",
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "build": "run-s check \"build-ci {@}\" --",
    "build-ci": "astro build",
    "check": "astro check",
    "dev": "astro dev",
    "lint": "run-s \"lint:biome {@}\" lint:md --",
    "lint:biome": "biome check",
    "lint:md": "remark . --quiet --frail",
    "preview": "astro preview"
  },
  "remarkConfig": {
    "plugins": [
      "remark-mdx",
      "remark-frontmatter",
      "remark-preset-lint-consistent",
      "remark-preset-lint-recommended",
      "remark-preset-lint-markdown-style-guide",
      [
        "remark-lint-maximum-line-length",
        false
      ],
      [
        "remark-lint-ordered-list-marker-value",
        "ordered"
      ]
    ]
  },
  "dependencies": {
    "@astrojs/mdx": "^4.3.7",
    "@fontsource-variable/fira-code": "^5.2.7",
    "@fontsource-variable/inter": "^5.2.8",
    "@fontsource-variable/noto-sans-sc": "^5.2.9",
    "@fontsource/fira-code": "^5.2.7",
    "@fontsource/inter": "^5.2.8",
    "@fontsource/noto-sans-sc": "^5.2.8",
    "astro": "^5.14.4",
    "astro-expressive-code": "^0.41.3",
    "astro-min": "1.3.1",
    "astro-purgecss": "^5.3.0",
    "date-fns": "4.1.0",
    "katex": "^0.16.25",
    "lxgw-wenkai-screen-webfont": "^1.7.0",
    "mermaid": "^11.12.0",
    "rehype-autolink-headings": "^7.1.0",
    "rehype-katex": "^7.0.1",
    "rehype-mermaid": "^3.0.0",
    "rehype-slug": "^6.0.0",
    "remark-gfm": "^4.0.1",
    "remark-math": "^6.0.0",
    "remark-smartypants": "^3.0.2",
    "typescript": "^5.9.3"
  },
  "devDependencies": {
    "@astrojs/check": "0.9.4",
    "@astrojs/markdown-remark": "^6.3.8",
    "@biomejs/biome": "^2.2.6",
    "@playwright/browser-chromium": "^1.56.0",
    "autoprefixer": "^10.4.21",
    "browserslist": "^4.26.3",
    "cssnano": "^7.1.1",
    "image-size": "^2.0.2",
    "npm-run-all2": "^8.0.4",
    "playwright": "^1.56.0",
    "postcss": "^8.5.6",
    "postcss-html": "^1.8.0",
    "postcss-preset-env": "^10.4.0",
    "remark-frontmatter": "^5.0.0",
    "remark-lint-maximum-line-length": "^4.1.1",
    "remark-lint-ordered-list-marker-value": "^4.0.1",
    "remark-mdx": "^3.1.1",
    "remark-preset-lint-consistent": "^6.0.1",
    "remark-preset-lint-markdown-style-guide": "^6.0.1",
    "remark-preset-lint-recommended": "^7.0.1",
    "sharp": "^0.34.4",
    "stylelint": "^16.25.0",
    "stylelint-config-html": "^1.1.0",
    "stylelint-config-recommended": "^17.0.0",
    "stylelint-config-standard": "^39.0.1",
    "vite": "^7.1.9"
  },
  "packageManager": "pnpm@10.16.1+sha512.0e155aa2629db8672b49e8475da6226aa4bdea85fdcdfdc15350874946d4f3c91faaf64cbdc4a5d1ab8002f473d5c3fcedcd197989cf0390f9badd3c04678706",
