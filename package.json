{
  "name": "blog-astro",
  "type": "module",
  "version": "0.0.1",
  "packageManager": "pnpm@10.2.0+sha512.0d27364e0139c6aadeed65ada153135e0ca96c8da42123bd50047f961339dc7a758fc2e944b428f52be570d1bd3372455c1c65fa2e7aa0bfbf931190f9552001",
  "scripts": {
    "build": "run-s check \"build-ci {@}\" --",
    "build-ci": "run-s dep:playwright \"build-only {@}\" --",
    "build-only": "astro build",
    "check": "astro check",
    "dep:playwright": "playwright install chromium",
    "dev": "astro dev",
    "lint": "run-s \"lint:css {@}\" \"lint:js {@}\" lint:md --",
    "lint:css": "stylelint \"src/**/*.{css,scss,astro}\"",
    "lint:js": "eslint \"src/**/*.{md,mdx,js,ts,cjs}\"",
    "lint:md": "remark . --quiet --frail",
    "preview": "astro preview"
  },
  "dependencies": {
    "@astrojs/mdx": "^4.0.8",
    "@fontsource-variable/fira-code": "^5.1.1",
    "@fontsource-variable/inter": "^5.1.1",
    "@fontsource-variable/noto-sans-sc": "^5.1.1",
    "@fontsource/fira-code": "^5.1.1",
    "@fontsource/inter": "^5.1.1",
    "@fontsource/noto-sans-sc": "^5.1.1",
    "astro": "^5.3.0",
    "astro-critters": "^2.2.1",
    "astro-expressive-code": "^0.40.2",
    "astro-min": "1.3.1",
    "astro-purgecss": "^5.2.0",
    "date-fns": "4.1.0",
    "katex": "^0.16.21",
    "lxgw-wenkai-screen-webfont": "^1.7.0",
    "mermaid": "^11.4.1",
    "rehype-autolink-headings": "^7.1.0",
    "rehype-katex": "^7.0.1",
    "rehype-mermaid": "^3.0.0",
    "rehype-slug": "^6.0.0",
    "remark-gfm": "^4.0.1",
    "remark-math": "^6.0.0",
    "remark-mermaidjs": "^7.0.0",
    "remark-smartypants": "^3.0.2",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.24.1"
  },
  "devDependencies": {
    "@astrojs/check": "0.9.4",
    "@astrojs/markdown-remark": "^6.1.0",
    "@eslint/js": "^9.20.0",
    "astro-eslint-parser": "^1.2.1",
    "autoprefixer": "^10.4.20",
    "browserslist": "^4.24.4",
    "cssnano": "^7.0.6",
    "eslint": "^9.20.1",
    "eslint-config-prettier": "^10.0.1",
    "eslint-mdx": "^3.1.5",
    "eslint-plugin-astro": "^1.3.1",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "image-size": "^1.2.0",
    "npm-run-all2": "^7.0.2",
    "playwright": "^1.50.1",
    "postcss": "^8.5.3",
    "postcss-html": "^1.8.0",
    "postcss-preset-env": "^10.1.4",
    "prettier": "^3.5.1",
    "prettier-plugin-astro": "^0.14.1",
    "remark-frontmatter": "^5.0.0",
    "remark-lint-maximum-line-length": "^4.1.1",
    "remark-lint-ordered-list-marker-value": "^4.0.1",
    "remark-mdx": "^3.1.0",
    "remark-preset-lint-consistent": "^6.0.1",
    "remark-preset-lint-markdown-style-guide": "^6.0.1",
    "remark-preset-lint-recommended": "^7.0.1",
    "remark-preset-prettier": "^2.0.1",
