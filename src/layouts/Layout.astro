---
import "@fontsource/fira-code";
import "@fontsource/source-sans-3";
import "@fontsource/source-sans-3/variable.css";
import "@fontsource/source-serif-4";
import "@fontsource/source-serif-4/variable.css";
import "@fontsource/noto-serif-sc/chinese-simplified.css";
import "@/styles/global.css";
import Navigation from "@/components/Navigation.astro";

export interface Props {
  title: string;
  htmlClass?: string;
  bodyClass?: string;
}

const { title, htmlClass, bodyClass } = Astro.props as Props;
---

<!DOCTYPE html>
<html lang="zh-CN" class={htmlClass}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class={bodyClass}>
    <Navigation />
    <slot />
  </body>
</html>

<style>
  .h-full {
    height: 100%;
  }
</style>
