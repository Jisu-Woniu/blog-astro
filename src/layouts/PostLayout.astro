---
import "@fontsource/fira-code";
import "@fontsource/source-sans-3";
import "@fontsource-variable/source-sans-3";
import "@fontsource/source-serif-4";
import "@fontsource-variable/source-serif-4";
import "@fontsource/noto-serif-sc/chinese-simplified.css";
import "katex/dist/katex.css";
import "@/styles/global.css";
import "@/assets/prism.css";
import InfoCard from "@/assets/info-card.png";
import type { IFrontmatter } from "@/content";
import Comment from "@/components/Comment.astro";
import Layout from "./Layout.astro";
import { formatISO, format } from "date-fns";
import zhCN from "date-fns/locale/zh-CN/index";

export interface Props {
  frontmatter: IFrontmatter;
}

const { frontmatter } = Astro.props;

const pubDateISO = formatISO(frontmatter.pubDate);
---

<Layout title={`${frontmatter.title} - ÊûÅÈÄüËúóÁâõÁöÑÂçöÂÆ¢`}>
  <meta
    slot="head"
    property="og:title"
    content={`${frontmatter.title} - ÊûÅÈÄüËúóÁâõÁöÑÂçöÂÆ¢`}
  />
  <meta slot="head" property="og:image" content={InfoCard.src} />
  <main
    class="line-numbers"
    data-prismjs-copy="üìã"
    data-prismjs-copy-success="‚úÖ"
    data-prismjs-copy-error="‚ùé"
  >
    <h1>{frontmatter.title}</h1>
    <p>
      ÂèëÂ∏É‰∫é
      <time id="publish-date" data-pubdate={pubDateISO} datetime={pubDateISO}>
        {format(frontmatter.pubDate, "PPP H:mm", { locale: zhCN })}
      </time>
    </p>

    <hr />
    <slot />
  </main>
  <Comment />
  <script>
    import { formatDistanceToNow, parseISO } from "date-fns";
    import zhCN from "date-fns/locale/zh-CN/index";
    import Prism from "prismjs";

    const timeElement =
      document.querySelector<HTMLTimeElement>("time#publish-date");
    const pubDateISO = timeElement?.dataset.pubdate;
    if (pubDateISO) {
      const relativeDate = formatDistanceToNow(parseISO(pubDateISO), {
        addSuffix: true,
        locale: zhCN,
      });
      relativeDate && (timeElement.innerText += `Ôºà${relativeDate}Ôºâ`);
    }

    Prism.highlightAll(true);
  </script>
</Layout>

<style is:global>
  a.anchor-link {
    font-size: smaller;
    color: transparent;
    margin-left: 1ch;
  }

  *:hover > a.anchor-link {
    color: cornflowerblue;
  }

  :not(pre) > code {
    background-color: rgb(175 164 193 / 20%);
    padding: 0.2em 0.4em;
    border-radius: 6px;
  }

  blockquote {
    border: 1px solid #999;
    color: #222;
    padding: 2px 0 2px 20px;
    margin: 0;
    font-style: italic;
  }

  pre[class*="language-"] {
    border-radius: 10px;
    box-shadow: 2px 2px 2px #ddd8;
  }

  table {
    border-collapse: collapse;
  }

  th,
  td {
    border: 1px #222 solid;
    padding: 5px;
  }

  kbd {
    border: 2px solid #cdcdcd;
    border-radius: 0.25rem;
    box-shadow: inset 0 -1px 0 0 #cdcdcd;
    font-size: 0.825rem;
    padding: 0.25rem;
  }

  img {
    max-width: 100%;
  }

  main {
    padding: 1.5rem;
  }
</style>
